PORT=3000

# Database
# Use DATABASE_URL for connection string (Production/Cloud)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Or use individual credentials (Local Development)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_NAME=glitch_db
DB_PORT=5432

# Authentication
JWT_SECRET=your_secret_key_change_me_in_production

# Storage
# Set to 's3' for AWS S3 / Supabase Storage (Recommended for Production)
# Set to 'local' for local disk storage (Warning: Files are lost on cloud redeploys)
STORAGE_MODE=local

# AWS S3 Configuration (Required if STORAGE_MODE=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=your-bucket-name
# Optional CloudFront URL
CLOUDFRONT_URL=
